<% include partials/header %>
<!-- Icon Bar (Sidebar - hidden on small screens) -->
<nav class="w3-sidebar w3-bar-block w3-small w3-hide-small w3-center">
    <!-- Avatar image in top left corner -->
    <img src="images/leftCorner.jpg" style="width:100%">
    <a href="#home" class="w3-bar-item w3-btn w3-padding-large w3-hover-black">
        <i class="fa fa-home w3-xxlarge"></i>
        <p>HOME</p>
    </a>
    <a href="#contact" class="w3-bar-item w3-btn w3-padding-large w3-hover-black">
        <i class="fa fa-envelope w3-xxlarge"></i>
        <p>CONTACT</p>
    </a>
</nav>
<!-- Navbar on small screens (Hidden on medium and large screens) -->
<div class="w3-top w3-hide-large w3-hide-medium" id="myNavbar">
    <div class="w3-bar w3-black w3-opacity w3-hover-opacity-off w3-center w3-small">
        <a href="#home" class="w3-bar-item w3-btn" style="width:25% !important">HOME</a>
        <a href="#contact" class="w3-bar-item w3-btn" style="width:25% !important">CONTACT</a>
    </div>
</div>
<!-- Page Content -->
<div class="w3-padding-medium" id="main">
    <!-- Header/Home -->
    <header class="w3-container w3-padding-32 w3-center w3-black" id="home">
        <h1 class="w3-xxxlarge"><%= title %></h1>
    </header>
    <!-- Hashtags Section -->
    <div class="w3-content w3-text-grey w3-padding-32">
        <h2 class="w3-text-light-grey w3-center">Twitter Automa</h2>
        <hr style="width:100%" class="w3-opacity w3-center">
        <p>This is a project based on the Twitter APIs for the Web Programming course.</p>
        <p>
            The purpose of this project is to make an app that automatically
            tweets out random hashtags that are in the current global trending list.
            The app also provides, for each tweet, some additional information
            like the number of retweets, favorites, tweet ID and date of creation
            (this information is updated automatically via a webhook connection with twitter).
        </p>
        <div class="w3-section w3-row">
            <p>Number of tweets to delete (min = 1; max = 200)</p>
            <form action="#" id="deleteTweets" name="deleteTweets" method="POST">
                <input class="w3-input w3-third w3-margin-right w3-margin-bottom" id="amountToDelete" type="number" name="amountToDelete" value="10" min="1" max="200"></input>
                <button class="w3-btn w3-light-grey" type="submit"> Submit</button>
            </form><br>
        </div>
        <a href="https://twitter.com/bot_unimi" target="_blank">
            <btn class="w3-btn w3-light-grey w3-padding-large" type="submit">
                <i class="fa fa-twitter w3-hover-opacity w3-xlarge"> @bot_unimi</i>
            </btn>
        </a>
        <hr style="width:100%" class="w3-opacity w3-center">

        <div class="w3-container w3-row-padding w3-mobile centerDiv">
                <ul class="w3-ul">
                    <li class="w3-dark-grey w3-xxxlarge w3-padding-32 w3-center fontBold">Tweets<br>
                    <div class="fontLighter w3-medium">
                            Tweet count: <%= tweetCount %><br>
                            Last update: <span class="formattedTime"></span>
                    </div>
                    </li><br>
                    <% tweetStatistics.forEach(function(tweet){ %>
                    <li class="w3-block w3-btn w3-animate-opacity w3-white w3-hover-white fontBold hashtag"><%= tweet.text %></li><br>
                    <% }) %>
                </ul>
        </div>
    <!-- End Hashtags Section -->
    </div>
    <!-- Contact Section -->
    <div class="w3-padding-32 w3-content w3-text-grey" id="contact">
        <h2 class="w3-text-light-grey w3-center">Contact my maker</h2>
        <hr style="width:100%" class="w3-opacity w3-center">
        <div class="w3-section">
            <p><i class="fa fa-map-marker fa-fw w3-text-white w3-xxlarge w3-margin-right"></i> Como, IT</p>
            <p><i class="fa fa-phone fa-fw w3-text-white w3-xxlarge w3-margin-right"></i>+39 393-403-45-01</p>
            <p><i class="fa fa-envelope fa-fw w3-text-white w3-xxlarge w3-margin-right"> </i>andrei.ciulpan@studenti.unimi.it</p>
        </div><br>
        <p>If you find a bug you can send a message <a href="" class="w3-bar-item w3-btn w3-padding-large w3-black"></a></p>
        <form action="#" id="contact" name="contact" method="POST">
            <p><input class="w3-input w3-padding-16" type="text" id="name" placeholder="Name" required name="name"></p>
            <p><input class="w3-input w3-padding-16" type="email" id="email" placeholder="E-Mail" required name="email"></p>
            <p><input class="w3-input w3-padding-16" type="text" id="subject" placeholder="Subject" required name="subject"></p>
            <p><textarea rows="4" cols="50" class="w3-input w3-padding-16" type="text" id="message" placeholder="Hello..." required name="message"></textarea></p>
            <p>
                <button class="w3-btn w3-light-grey w3-padding-large" type="submit">
                    <i class="fa fa-paper-plane"></i> Send message
                </button>
            </p>
        </form>
    <!-- End Contact Section -->
    </div>
    <!-- Hidden variable to pass to javascript -->
    <div id="statistics" style="display: none;"><%= tweetStatisticsString %></div>
    <div id="updatedTimeMS" style="display: none;"><%= updatedTimeMS %></div>
<% include partials/footer %>
